---
const { title } = Astro.props;
import '@fontsource-variable/onest';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="fixed top-0 -z-20 h-full w-full rotate-180 transform bg-white bg-[radial-gradient(60%_120%_at_50%_50%,hsla(0,0%,100%,0)_0,rgba(252,205,238,.5)_100%)]" />
		<main class='w-screen md:max-w-6xl px-10 pt-20 md:pt-40 md:mx-auto flex flex-col gap-16 lg:gap-32'>
			<slot />
		</main>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Onest Variable', system-ui, sans-serif;
	}
</style>
